import java.util.Scanner;

class Rectangle{
double C,K;
void setchang(){
	Scanner input=new Scanner(System.in);
	C=input.nextDouble();
}
void setkuan(){
	Scanner input=new Scanner(System.in);
	K=input.nextDouble();
}
double zhouchang(){
	return 2*C+2*K;
}
double mianji(){
	return C*K;
}
} 

public class Exc3_1{
public static void main (String args[]){
Rectangle bunny=new Rectangle();
System.out.println("请输入矩形的长：");
bunny.setchang();
System.out.println("请输入矩形的宽：");
bunny.setkuan();
System.out.println("矩形的面积为："+bunny.mianji());
System.out.println("矩形的周长为："+bunny.zhouchang());
}
}
